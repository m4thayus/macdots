set number
set relativenumber
set linebreak
set showbreak=+++
set textwidth=0
set showmatch

set hlsearch
set smartcase
set ignorecase
set incsearch
 
set autoindent
set expandtab
set shiftwidth=2
set softtabstop=2
set tabstop=8
 
set ruler
 
set undolevels=1000
set backspace=indent,eol,start

colorscheme desert
syntax on

nmap <Up> <Nop>
nmap <Right> <Nop>
nmap <Left> <Nop>
nmap <Down> <Nop>
