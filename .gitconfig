[user]
  name = Matt Williams
  email = matt.seongjun@gmail.com
[core]
  excludesfile = ~/.gitexcludes
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[difftool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL -c '$wincmd w' -c 'wincmd H'
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd H'
[pager]
  diff = delta
  log = delta
  reflog = delta
  show = delta
[delta]
  line-numbers = true
  navigate = true

  ; Kanagawa Dragon
  syntax-theme = Kanagawa Dragon
  zero-style = "syntax dim auto"

  plus-style = "#8a9a7b bold #181616"
  plus-non-emph-style = "#8a9a7b bold #181616"
  plus-emph-style = "#8a9a7b bold ul #181616"
  line-numbers-plus-style = "#8a9a7b #181616"

  minus-style = "#c4746e bold #181616"
  minus-non-emph-style = "#c4746e bold #181616"
  minus-emph-style = "#c4746e bold strike #181616"
  line-numbers-minus-style = "#c4746e #181616"

  ; Tomorrow Night Eighties
  ; syntax-theme = base16
  ; zero-style = "syntax dim auto"

  ; plus-style = "#99cc99 bold #2d2d2d"
  ; plus-non-emph-style = "#99cc99 bold #2d2d2d"
  ; plus-emph-style = "#99cc99 bold ul #2d2d2d"
  ; line-numbers-plus-style = "#99cc99 #2d2d2d"

  ; minus-style = "#f2777a bold #2d2d2d"
  ; minus-non-emph-style = "#f2777a bold #2d2d2d"
  ; minus-emph-style = "#f2777a bold strike #2d2d2d"
  ; line-numbers-minus-style = "#f2777a #2d2d2d"
[interactive]
  diffFilter = delta --color-only
[fetch]
  prune = true
[pull]
  rebase = false
[push]
  autoSetupRemote = true
[alias]
  st = status
  ps = push
  psu = push --set-upstream origin
  pl = pull
  ft = fetch
  cl = clone
  br = branch
  brd = branch -d
  co = checkout
  com = checkout master
  cob = checkout -b
  cm = commit
  cma = commit -a
  up = pull upstream master
  all = !git add -A && git commit
  undo = reset HEAD~1 --mixed
  uncommit = reset HEAD^
  amend = commit -a --amend
[credential]
  helper = osxkeychain
[credential "https://github.com"]
  username = m4thayus
[credential "https://gitlab.com"]
  username = m4thayus
[init]
  defaultBranch = main
